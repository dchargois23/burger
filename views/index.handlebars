<h1>Eat-Da-Burger!</h1>

<h2>Burgers Available!</h2>

<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  <li>
    {{this.burger_name}}

    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
      <button type="submit">DEVOUR IT!</button>
    </form>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  <li>
    {{this.burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ul>
<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
        {{#unless this.devoured}}
        <div>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
        {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

